<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/main_gradient_top</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">#fddd</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionBarStyle">@style/WhiteActionBar</item>
    </style>

    <style name="WhiteTheme.Super">
        <item name="actionBarStyle">@style/SuperWhiteActionBar</item>
    </style>

    <style name="WhiteTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WhiteTheme.NoActionBar.TranspStatusBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- for auth and sms-->
    <style name="SuperWhiteActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="WhiteActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@android:color/white</item>
        <item name="background">@android:color/white</item>
        <item name="titleTextStyle">@style/WhiteActionBarTextStyle</item>
    </style>
    <style name="WhiteActionBarTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black87</item>
    </style>


    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="DelimiterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/delimiter</item>
    </style>


    <style name="BaseStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>
    <style name="BaseStyle.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/delimiter</item>
    </style>
    <style name="BaseStyle.CenterText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">16sp</item>
        <item name="android:layout_marginEnd">16sp</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BaseStyle.CenterText.HelloText">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:layout_marginTop">14sp</item>
    </style>

    <style name="BaseStyle.CenterText.DescriptionText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/black54</item>
    </style>

    <style name="BaseStyle.CenterText.InputText">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:layout_marginBottom">24sp</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:backgroundTint">@color/delimiter</item>
    </style>
    <style name="BaseStyle.CenterText.InputText.Number">
        <item name="android:inputType">phone</item>
    </style>

    <style name="BaseStyle.CenterText.MainButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:layout_height">72sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BaseStyle.CenterText.TimerText">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:textColor">@color/black54</item>
    </style>

    <style name="BaseStyle.BaseFormItem">
        <item name="android:layout_marginStart">16sp</item>
        <item name="android:layout_marginEnd">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>

    <style name="BaseStyle.BaseFormItem.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">14sp</item>
        <item name="android:layout_marginBottom">14sp</item>
        <item name="android:layout_height">72sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="CardRoundButoon">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">24sp</item>
        <item name="android:layout_marginBottom">24sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#fff</item>
    </style>


    <style name="BaseStyle.MapButtonFrame">
        <item name="android:layout_height">48sp</item>
        <item name="android:layout_width">48sp</item>
    </style>
    <style name="BaseStyle.MapButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
